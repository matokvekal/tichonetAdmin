                                            { name: "LineName" },
                                            { name: "LineNumber" },
                                            { name: "Direction" },
                                            { name: "IsActive" },
                                            { name: "totalStudents" },
                                            { name: "Duration" },
                                            { name: "Sun" },
                                            { name: "Mon" },
                                            { name: "Tue" },
                                            { name: "Wed" },
                                            { name: "Thu" },
                                            { name: "Fri" },
                                            { name: "Sut" },
