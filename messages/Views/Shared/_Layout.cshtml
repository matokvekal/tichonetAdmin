@using System.Web.Optimization
@using DEBS = Business_Logic.DictExpressionBuilderSystem

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hasaot Registration</title>

    @*<script src="//code.jquery.com/jquery-1.12.0.min.js"></script>*@
    @Scripts.Render("~/bundles/mainScripts")<!-- Moved to bundles. All scripts should be in head section-->
    @RenderSection("scripts", required: false)

    @Styles.Render("~/bundles/css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(@DEBS.Translate("menu.Home"), "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - @DEBS.Translate("general.schoolRegistration")</p>
    </footer>
 
</body>
</html>
